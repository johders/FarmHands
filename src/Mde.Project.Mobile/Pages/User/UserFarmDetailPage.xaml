<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:Mde.Project.Mobile.ViewModels"
             x:Class="Mde.Project.Mobile.Pages.User.UserFarmDetailPage"
             x:DataType="viewmodel:UserFarmDetailsViewModel"
             Title="Farm details">
    <VerticalStackLayout Spacing="20" Margin="8">
        <FlexLayout JustifyContent="SpaceBetween"
                    AlignItems="Center"
                    Margin="0,20">
            <Label 
            Text="{Binding SelectedFarm.Name}"
            Style="{StaticResource LargeLabel}"
                   Margin="0"/>

            <Image
               Source="heart.png"
               WidthRequest="50"
               HeightRequest="50"/>
        </FlexLayout>

        <Image Source="{Binding SelectedFarm.ImageUrl}"
               Aspect="AspectFill"/>

        <Label Text="Our story"
               Style="{StaticResource SmallLabel}"/>
        <Label Text="{Binding SelectedFarm.Description}"
               Style="{StaticResource LabelText}"
               LineBreakMode="WordWrap"/>

        <Label Text="Our harvest"
               Style="{StaticResource SmallLabel}"/>

    </VerticalStackLayout>
</ContentPage>