<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mde.Project.Mobile.Pages.User.UserAccountSettingsPage"
             Title="Account Settings">
    <VerticalStackLayout>
        <Button Text="Sign out"
                CornerRadius="25"
                WidthRequest="200"
                BackgroundColor="{AppThemeBinding Light={StaticResource TileBackgroundColor}, Dark={StaticResource BurgondyRed}}"
                TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource SecondaryBackgroundColorDark}}"
                Margin="20"
                Command="{Binding LogOutCommand}">
            <Button.Shadow>
                <Shadow Brush="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}"
                        Offset="10,10"
                        Radius="50"
                        Opacity=".8"/>
            </Button.Shadow>
        </Button>
    </VerticalStackLayout>
</ContentPage>