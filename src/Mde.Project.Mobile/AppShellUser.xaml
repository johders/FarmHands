<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Mde.Project.Mobile.AppShellUser"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:userpages="clr-namespace:Mde.Project.Mobile.Pages.UserPages"
    Shell.FlyoutBehavior="Disabled"
    Title="Mde.Project.Mobile"
    Shell.NavBarIsVisible="False"
    Shell.BackgroundColor="#EDE9D7"
    Shell.TabBarBackgroundColor="#A3B18A"
    Shell.TabBarUnselectedColor="#3E4E2D"
    Shell.TabBarForegroundColor="#F4F4F2"
  
    Shell.TabBarTitleColor="#F4F4F2">

    <TabBar>
        <ShellContent
            Title="Home"
            Icon="home.png"
            ContentTemplate="{DataTemplate userpages:UserHomePage}"
            Route="userhome" />

        <ShellContent
            Title="Map"
            Icon="map.png"
            ContentTemplate="{DataTemplate userpages:UserMapViewPage}"
            Route="usermap" />

        <ShellContent
            Title="Favorites"
            Icon="favorites.png"
            ContentTemplate="{DataTemplate userpages:UserFavoritesPage}"
            Route="userfavorites" />

        <ShellContent
            Title="Settings"
            Icon="settings.png"
            ContentTemplate="{DataTemplate userpages:UserSettingsPage}"
            Route="usersettings" />
    </TabBar>

</Shell>
