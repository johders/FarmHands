<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Mde.Project.Mobile.ViewModels"
             x:Class="Mde.Project.Mobile.Pages.UserPages.UserHomePage"
             Title="Home"
             HideSoftInputOnTapped="True">

    <VerticalStackLayout Spacing="10" Margin="8">

        <SearchBar Placeholder="Search by farm, product, location,.."
                   Keyboard="Default"/>

        <Label Text="Farms near me"/>

        <CollectionView ItemsSource="{Binding Products}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:ProductViewModel">
                    <Border WidthRequest="150" HeightRequest="150" Padding="15">
                        <VerticalStackLayout>
                            <Label Text="{Binding Name}"
                               FontSize="18"
                               HorizontalTextAlignment="Start"/>
                            <Label Text="{Binding Description}"
                               FontSize="14"
                               HorizontalTextAlignment="Start"/>
                            <Image Source="{Binding ImageUrl}"
                               WidthRequest="50"
                               HeightRequest="50"
                               Aspect="AspectFill"/>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label Text="Currently in season"/>

        <CollectionView ItemsSource="{Binding Products}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:ProductViewModel">
                    <Border WidthRequest="150" HeightRequest="150" Padding="15">
                        <VerticalStackLayout>
                            <Label Text="{Binding Name}"
                               FontSize="18"
                               HorizontalTextAlignment="Start"/>
                            <Label Text="{Binding Description}"
                               FontSize="14"
                               HorizontalTextAlignment="Start"/>
                            <Image Source="{Binding ImageUrl}"
                               WidthRequest="50"
                               HeightRequest="50"
                               Aspect="AspectFill"/>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
    </VerticalStackLayout>
</ContentPage>


